        <button type="submit">Search</button>
    </form>

    <form action="<?php echo $_SERVER['PHP_SELF']; ?>" method="post">
        <input type="text" name="search" placeholder="Search by name (POST)" />
        <button type="submit">Search</button>
    </form>

    
    <button onclick="toggleAddMemberForm()">Add Member</button>

   
